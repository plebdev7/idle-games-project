{
  "name": "@idle-games/game-engine",
  "version": "1.0.0",
  "description": "Shared game engine for idle games development",
  "type": "module",
  "main": "./index.js",
  "types": "./index.d.ts",
  "exports": {
    ".": {
      "import": "./index.js",
      "types": "./index.d.ts"
    },
    "./core/*": {
      "import": "./core/*.js",
      "types": "./core/*.d.ts"
    },
    "./state/*": {
      "import": "./state/*.js",
      "types": "./state/*.d.ts"
    },
    "./utils/*": {
      "import": "./utils/*.js",
      "types": "./utils/*.d.ts"
    }
  },
  "scripts": {
    "build": "tsc --build",
    "dev": "tsc --build --watch",
    "clean": "rm -rf dist *.tsbuildinfo",
    "lint": "eslint . --ext .ts --fix",
    "format": "prettier --write ."
  },
  "keywords": [
    "game-engine",
    "idle-game",
    "typescript",
    "vue"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "prettier": "^3.1.0",
    "typescript": "~5.3.0"
  },
  "dependencies": {},
  "peerDependencies": {
    "vue": "^3.4.0"
  }
}
